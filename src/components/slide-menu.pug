mixin slide-menu()
  .overlay.js-side-menu__overlay
    .side-menu.js-side__menu(data-id="menu")
      .side-menu__top
        a.logo.side-menu__logo(href="#!")
          img(src="img/icons/logo.svg", alt="")
        button.side-menu__close.js-side-menu__close(type="button") Закрыть
      ul.menu.side-menu__menu 
        li.menu__item 
          a(href="/") Home
        li.menu__item
          a(href="/find-work") Find work
        li.menu__item 
          a(href="/find-freelancers") Find Freelancers
        li.menu__item 
          a(href="/login") Log In
        li.menu__item 
          a(href="/sign-up") Sign Up
      a.button.button--radius-50.side-menu__button(href="/new_project") Post a project
    .overlay__layer.js-side-menu__close
